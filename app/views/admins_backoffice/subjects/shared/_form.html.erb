<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			<h1 class="page-header"><%= action_message %></h1>
			</div>

			<% if @subject.errors.any? %>
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
				
				<ul>
					<% @subject.errors.full_messages.each do |message| %>
					<li> <%= message %> </li>
					<%  end %>
				</ul>
			</div>
			<% end %>

			<div class="panel-body">
				<div class="row">
					<div class="col-lg-12">
						<%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
						  <div class="form-group">
						    <%= form.label :Descricao %>
						    <%= form.text_field :description, class:"form-control", placeholder:"Descricao do assunto/area" %>
						  </div>
						  
						  <button type="submit" class="btn btn-default">Salvar</button>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>