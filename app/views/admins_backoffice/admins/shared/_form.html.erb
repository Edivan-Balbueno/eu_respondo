<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">

			<h1 class="page-header"><%= action_message %></h1>

			</div>

			<% if @admin.errors.any? %>
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
				
				<ul>
					<% @admin.errors.full_messages.each do |message| %>
					<li> <%= message %> </li>
					<%  end %>
				</ul>
			</div>
			<% end %>

			<div class="panel-body">
				<div class="row">
					<div class="col-lg-12">
						<%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
						  <div class="form-group">
						    <%= form.label :email_adiministrador %>
						    <%= form.text_field :email, class:"form-control", placeholder:t('formulario.text_field', item: :email) %>
						  </div>
						  <div class="form-group">
						    <%= form.label :password %>
						    <%= form.password_field :password, class:"form-control", placeholder:t('formulario.password_field', item: :password) %>
						  </div>
						  <div class="form-group">
						    <%= form.label :password_confirmatoin %>
						    <%= form.password_field :password_confirmatoin, class:"form-control", placeholder:t('formulario.password_confirm', item: :password_confirmatoin) %>
						  </div>
						  <button type="submit" class="btn btn-default">Salvar</button>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>